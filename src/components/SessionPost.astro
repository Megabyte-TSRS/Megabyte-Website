---
import { formatDate } from "../../libs/dateFormat";
import type { CollectionEntry } from "astro:content";
export interface Props {
  session: CollectionEntry<"sessions">;
  tColour: string;
}

const { session, tColour } = Astro.props;
const { Content } = await session.render();
---

<div class="card flex h-full w-full flex-col">
  <div
    class="bg-var flex flex-row items-center gap-5 border-b-2 border-neutral-800 px-5 py-5 md:px-6"
  >
    <!-- <div class="logo">
      <img src={session.data.img} alt="Icon for session" class="w-[14vh]" />
    </div> -->
    <div class="title flex items-center">
      <div>
        <h3 class="mb-1 text-[2.6vh] font-bold">
          {session.data.title}
        </h3>
        <h3 class="text-md italic">
          Last updated <span class=""
            >{formatDate(session.data.date)}</span
          >
        </h3>
      </div>
    </div>
  </div>
  <div
    class="bg-white flex flex-grow flex-col items-start gap-3 px-4 py-5 md:px-8"
  >
    <div class="flex flex-col gap-3 text-left text-lg">
      <div class="prose max-w-none">
        <Content />
      </div>
    </div>
  </div>

  <style
    define:vars={{
tColour: tColour 
    }}
  >
    .bg-var {
      background: var(--tColour);
    }
  </style>
</div>
